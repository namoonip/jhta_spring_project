<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	<!-- context, jee NameSpace Check -->
	
	<!-- WAS(Tomcat)가 생성해서 JNDI에 등록한 Connection Pool
		 스프링의 빈으로 등록하기  -->
	<!-- <jee:jndi-lookup id="dataSource" jndi-name="jdbc/myDB" /> -->
	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/my_db" />
		<property name="username" value="myuser" />
		<property name="password" value="zxcv1234"/>
	</bean>
	
	<!-- SqlMapper 핵심 객체를 Spring에 등록하기 -->
	<bean id="sqlMapClient" 
			class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
		<property name="configLocation" value="classpath:/META-INF/ibatis/SqlMapConfig.xml" />
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<!-- DataAccessException을 지원하는 Spring Template등록하기 -->
	<bean id="sqlMapClientTemplate" 
			class="org.springframework.orm.ibatis.SqlMapClientTemplate">
		<property name="sqlMapClient" ref="sqlMapClient" />
	</bean>
	
	
	<!-- dao를 등록 -->
	<context:component-scan base-package="kr.co.jhta.todo" >
			<!-- 어노테이션으로 context를 할 패키지를 구분 -->
			<!-- 해당 어노테이션이 붙은 클래스는 include한다.(Service, Repository) -->
			<context:include-filter type="annotation" expression="org.springframework.stereotype.Service"/>
			<context:include-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
			<!-- 해당 어노테이션이 붙은 클래스는 exclude한다.(Controller) -->
			<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
	</context:component-scan>
	
	
	
</beans>

