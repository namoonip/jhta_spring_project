<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- context, jee NameSpace Check -->
	
	<!-- WAS(Tomcat)가 생성해서 JNDI에 등록한 Connection Pool
		 스프링의 빈으로 등록하기  -->
	<!-- <jee:jndi-lookup id="dataSource" jndi-name="jdbc/myDB" /> -->
	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/my_db" />
		<property name="username" value="myuser" />
		<property name="password" value="zxcv1234"/>
	</bean>
	
	<!-- SqlMapper 핵심 객체를 Spring에 등록하기 -->
	<bean id="sqlMapClient" 
			class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
		<property name="configLocation" value="classpath:/META-INF/ibatis/SqlMapConfig.xml" />
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<!-- DataAccessException을 지원하는 Spring Template등록하기 -->
	<bean id="sqlMapClientTemplate" 
			class="org.springframework.orm.ibatis.SqlMapClientTemplate">
		<property name="sqlMapClient" ref="sqlMapClient" />
	</bean>

</beans>
